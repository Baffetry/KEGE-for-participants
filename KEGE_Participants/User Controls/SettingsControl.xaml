<UserControl x:Class="KEGE_Participants.User_Controls.SettingsControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KEGE_Participants.User_Controls"
             mc:Ignorable="d" 
             >
    <UserControl.Resources>
        <ControlTemplate x:Key="NoMouseOverButtonTemplate" TargetType="Button">
            <Border 
                x:Name="InnerBorder" 
                d:Background="#fff" Background="{TemplateBinding Background}" 
                d:BorderBrush="#000" BorderBrush="{TemplateBinding BorderBrush}"
                d:BorderThickness="3" BorderThickness="{TemplateBinding BorderThickness}"
                CornerRadius="15"
                >

                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="{x:Static SystemColors.ControlLightBrush}" />
                    <Setter Property="Foreground" Value="{x:Static SystemColors.GrayTextBrush}" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>
        <Style x:Key="ModernTextBoxBorder" TargetType="Border">
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="CornerRadius" Value="8"/>
            <Setter Property="Margin" Value="0,0,0,20"/>
        </Style>
    </UserControl.Resources>

    <Border
        Width="1200"
        Background="#fff"
        CornerRadius="15"
        >
        <StackPanel 
            HorizontalAlignment="Center"
            Width="1100"  Margin="20"
            >

            <Label Content="Настройки экзамена" FontSize="48" FontWeight="Bold" Margin="0,0,0,50" FontFamily="/Resources/Fonts/#Inter"/>

            <TextBlock Text="Файл загрузки варианта (.json):" FontSize="26" Margin="5,0,0,12" FontFamily="/Resources/Fonts/#Inter" FontWeight="SemiBold"/>
            <Grid Margin="0,0,0,30">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="120"/>
                </Grid.ColumnDefinitions>
                <Border Style="{StaticResource ModernTextBoxBorder}" Margin="0" Height="70">
                    <TextBox 
                        x:Name="Setting_LoadPath" FontSize="22" Padding="15,12" BorderThickness="0" 
                        VerticalContentAlignment="Center" FontFamily="/Resources/Fonts/#Inter"
                        Margin="10" FontWeight="SemiBold"
                        />
                </Border>
                <Button x:Name="BrowseLoad_btn" Grid.Column="1" Content="..." Margin="15,0,0,0" Height="70" FontSize="24" 
                    Template="{StaticResource NoMouseOverButtonTemplate}" Click="BrowseLoad_btn_Click"
                    BorderBrush="#000" BorderThickness="2" Background="#fff"/>
            </Grid>

            <TextBlock Text="Папка сохранения результатов:" FontSize="26" Margin="5,0,0,12" FontFamily="/Resources/Fonts/#Inter" FontWeight="SemiBold"/>
            <Grid Margin="0,0,0,40">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="120"/>
                </Grid.ColumnDefinitions>

                <Border Style="{StaticResource ModernTextBoxBorder}" Margin="0" Height="70">
                    <TextBox 
                        x:Name="Setting_SavePath" FontSize="22" Padding="15,12" BorderThickness="0" 
                        VerticalContentAlignment="Center" FontFamily="/Resources/Fonts/#Inter"
                        Margin="5" FontWeight="SemiBold"
                        />
                </Border>

                <Button x:Name="BrowseSave_btn" Grid.Column="1" Content="..." Margin="15,0,0,0" Height="70" FontSize="24" 
                    Template="{StaticResource NoMouseOverButtonTemplate}" BorderThickness="2" Click="BrowseSave_btn_Click"
                    BorderBrush="#000" Background="#fff"/>
            </Grid>

            <TextBlock 
                Visibility="Collapsed"
                Text="Длительность экзамена:" FontSize="26" Margin="5,10,0,15" FontFamily="/Resources/Fonts/#Inter" FontWeight="SemiBold"/>
            <StackPanel 
                Visibility="Collapsed"
                Orientation="Horizontal" Margin="0,0,0,50">

                <StackPanel>
                    <TextBlock Text="Часы" FontSize="16" HorizontalAlignment="Center" FontFamily="/Resources/Fonts/#Inter" Foreground="Gray" Margin="0,0,0,8"/>
                    <Border BorderBrush="Black" BorderThickness="2" CornerRadius="10" Width="100">
                        <TextBox 
                            x:Name="Setting_Hours" FontSize="28" Padding="12" BorderThickness="0" 
                            TextAlignment="Center" Text="03" FontFamily="/Resources/Fonts/#Inter" 
                            FontWeight="Bold" Margin="10" MaxLength="2" 
                            PreviewTextInput="NumberValidationTextBox"
                            LostFocus="TimeTextBox_LostFocus"
                            />
                    </Border>
                </StackPanel>

                <TextBlock Text=":" FontSize="42" VerticalAlignment="Bottom" Margin="15,0,15,15" FontWeight="Bold"/>

                <StackPanel>
                    <TextBlock Text="Минуты" FontSize="16" HorizontalAlignment="Center" FontFamily="/Resources/Fonts/#Inter" Foreground="Gray" Margin="0,0,0,8"/>
                    <Border BorderBrush="Black" BorderThickness="2" CornerRadius="10" Width="100">
                        <TextBox 
                            x:Name="Setting_Minutes" FontSize="28" Padding="12" BorderThickness="0" 
                            TextAlignment="Center" Text="55" FontFamily="/Resources/Fonts/#Inter" 
                            FontWeight="Bold" Margin="10" MaxLength="2"
                            PreviewTextInput="NumberValidationTextBox"
                            LostFocus="TimeTextBox_LostFocus"
                            />
                    </Border>
                </StackPanel>

                <TextBlock Text=":" FontSize="42" VerticalAlignment="Bottom" Margin="15,0,15,15" FontWeight="Bold"/>

                <StackPanel>
                    <TextBlock Text="Секунды" FontSize="16" HorizontalAlignment="Center" FontFamily="/Resources/Fonts/#Inter" Foreground="Gray" Margin="0,0,0,8"/>
                    <Border BorderBrush="Black" BorderThickness="2" CornerRadius="10" Width="100">
                        <TextBox 
                            x:Name="Setting_Seconds" FontSize="28" Padding="12" BorderThickness="0" 
                            TextAlignment="Center" Text="00" FontFamily="/Resources/Fonts/#Inter" 
                            FontWeight="Bold" Margin="10" MaxLength="2"
                            PreviewTextInput="NumberValidationTextBox"
                            LostFocus="TimeTextBox_LostFocus"
                            />
                    </Border>
                </StackPanel>

            </StackPanel>

            <Button x:Name="SaveAllSettings_btn" Content="Применить настройки" 
                Width="350" Height="75" HorizontalAlignment="Left"
                FontFamily="/Resources/Fonts/#Inter" FontSize="24" FontWeight="Bold" 
                Template="{StaticResource NoMouseOverButtonTemplate}" 
                BorderBrush="#000" Background="#fff"
                BorderThickness="2" Click="SaveAllSettings_btn_Click"/>

        </StackPanel>
    </Border>
</UserControl>
