<UserControl x:Class="KEGE_Participants.User_Controls.SideMenuControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KEGE_Participants.User_Controls"
             mc:Ignorable="d" 
             d:DesignHeight="1080" d:DesignWidth="470">
    <UserControl.Resources>

        <ControlTemplate x:Key="NoMouseOverButtonTemplate" TargetType="Button">
            <Border 
                x:Name="InnerBorder" 
                d:Background="#fff" Background="{TemplateBinding Background}" 
                d:BorderBrush="#000" BorderBrush="{TemplateBinding BorderBrush}"
                d:BorderThickness="3" BorderThickness="{TemplateBinding BorderThickness}"
                CornerRadius="15"
                >

                <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center" />
            </Border>
            <ControlTemplate.Triggers>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="{x:Static SystemColors.ControlLightBrush}" />
                    <Setter Property="Foreground" Value="{x:Static SystemColors.GrayTextBrush}" />
                </Trigger>
            </ControlTemplate.Triggers>
        </ControlTemplate>

    </UserControl.Resources>
    <Border
        x:Name="_Border"
        Background="#2d6dfe"
        BorderBrush="#000"
        BorderThickness="0 0 3 0"
        ClipToBounds="True"
        >
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <StackPanel Orientation="Horizontal">
                <Button
                    x:Name="_Close_btn"
                    Height="70" Width="70" Margin="30 30 10 30"
                    HorizontalAlignment="Left" BorderBrush="#000"
                    BorderThickness="3" Background="#fff"
                    Template="{StaticResource NoMouseOverButtonTemplate}"
                    Click="_Close_btn_Click"
                    >
                    <Image 
                    Source="/Resources/Icons/buttonClose96x96.png" 
                    Height="50" Width="50"
                    />

                </Button>

                <Button 
                    x:Name="Settings_btn" 
                    Width="70" Height="70" Margin="0,0,10,0" 
                    BorderBrush="#000"
                    BorderThickness="3" Background="#fff"
                    Template="{StaticResource NoMouseOverButtonTemplate}" 
                    Click="Settings_btn_Click">
                    <Image Source="/Resources/Icons/settings96x96.png" Margin="10"/>
                </Button>

                <Button 
                    x:Name="Home_btn" Width="70" Height="70" Margin="0,0,10,0" 
                    Template="{StaticResource NoMouseOverButtonTemplate}" 
                    BorderBrush="#000" BorderThickness="3" Background="#fff"
                    Click="Home_btn_Click">
                    <Image Source="/Resources/Icons/home96x96.png" Margin="10 5 10 10"/>
                </Button>
            </StackPanel>


            <local:LoginControl
                x:Name="_LoginBoard"
                Margin="30 120 30 5"
                Visibility="Visible"
                Grid.Row="1" Width="400"
                VerticalAlignment="Center"
                HorizontalAlignment="Left"
                />

            <Button
                x:Name="_StartAttempt_btn" Grid.Row="2"
                Content="Начать попытку" Height="80" Width="400" Margin="30 5"
                FontFamily="/Resources/Fonts/#Inter" FontSize="30" FontWeight="SemiBold"
                BorderBrush="#000" BorderThickness="3" Background="#fff"
                Template="{StaticResource NoMouseOverButtonTemplate}"
                Click="_StartAttempt_btn_Click" HorizontalAlignment="Left"
                VerticalAlignment="Top"
                />

        </Grid>
    </Border>
</UserControl>
