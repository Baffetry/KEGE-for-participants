<UserControl x:Class="KEGE_Participants.User_Controls.TimerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KEGE_Participants.User_Controls"
             mc:Ignorable="d" 
             >
    <Border 
        Background="#FFFFFF" CornerRadius="10" 
        BorderBrush="#000" BorderThickness="3"
        Padding="15,5" HorizontalAlignment="Right" 
        Margin="20" Height="120" Width="340"
        >

        <TextBlock 
            x:Name="Timer_TextBlock" 
            FontSize="38" 
            FontWeight="Bold" 
            Foreground="#000"
            VerticalAlignment="Center"
            HorizontalAlignment="Center"
            />
        
    </Border>
</UserControl>
