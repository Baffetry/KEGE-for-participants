<UserControl x:Class="KEGE_Participants.User_Controls.LoginControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:KEGE_Participants.User_Controls"
             mc:Ignorable="d" 
             d:DesignWidth="600">
    <UserControl.Resources>
        
        
        
        
        
    </UserControl.Resources>
    <Border
        x:Name="_Border"
        Background="#fff"
        CornerRadius="15"
        BorderBrush="#000"
        BorderThickness="3"
        >

        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <TextBlock
                Grid.Row="0" Margin="15 30 15 30"
                Text="ФИО участника" TextAlignment="Center"
                FontFamily="/Resources/Fonts/#Inter" FontWeight="SemiBold" FontSize="40"
                />

            <!--|| Фамилия ||-->

            <StackPanel Grid.Row="1" Margin="10 20" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0" Margin="10 0 0 5"
                        Text="Фамилия" TextAlignment="Left"
                        FontFamily="/Resources/Fonts/#Inter" FontSize="28"
                        />

                    <Border Grid.Row="1" BorderBrush="#000" BorderThickness="2" CornerRadius="5">
                        <TextBox
                            x:Name="Login_SecondName"
                            d:Text="##########" MaxLength="30"
                            FontFamily="/Resources/Fonts/#Inter" FontSize="30" FontWeight="SemiBold"
                            Margin="5" TextWrapping="Wrap"
                            />

                    </Border>
                </Grid>
            </StackPanel>

            <!-- || Имя || -->

            <StackPanel Grid.Row="2" Margin="10 20" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0" Margin="10 0 0 5"
                        Text="Имя" TextAlignment="Left"
                        FontFamily="/Resources/Fonts/#Inter" FontSize="28"
                        />

                    <Border Grid.Row="1" BorderBrush="#000" BorderThickness="2" CornerRadius="5">
                        <TextBox
                            x:Name="Login_FirstName"
                            d:Text="##########" MaxLength="30"
                            FontFamily="/Resources/Fonts/#Inter" FontSize="30" FontWeight="SemiBold"
                            Margin="5" TextWrapping="Wrap"
                            />

                    </Border>
                </Grid>
            </StackPanel>

            <!--|| Отчество ||-->

            <StackPanel Grid.Row="3" Margin="10 20" >
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <TextBlock
                        Grid.Row="0" Margin="10 0 0 5"
                        Text="Отчество" TextAlignment="Left"
                        FontFamily="/Resources/Fonts/#Inter" FontSize="28"
                        />

                    <Border Grid.Row="1" BorderBrush="#000" BorderThickness="2" CornerRadius="5">
                        <TextBox
                            x:Name="Login_MiddleName"
                            d:Text="##########" MaxLength="30"
                            FontFamily="/Resources/Fonts/#Inter" FontSize="30" FontWeight="SemiBold"
                            Margin="5" TextWrapping="Wrap"
                            />

                    </Border>
                </Grid>
            </StackPanel>

        </Grid>
    </Border>
</UserControl>
